{
  "name": "whatsapp-auto-reply",
  "version": "1.0.0",
  "description": "Automated WhatsApp reply system with custom message templates",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist && npm run build",
    "prebuild": "node scripts/render-build.js",
    "start": "node dist/index.js",
    "start:prod": "npm run build && NODE_ENV=production node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node --watch src/index.ts",
    "dev:start": "node scripts/start-dev.js",
    "start:whatsapp": "node scripts/start-whatsapp.js",
    "start:simple": "node scripts/start-simple.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "node scripts/setup.js",
    "setup:config": "node scripts/setup-config.js",
    "setup:directories": "node scripts/setup-directories.js",
    "docker:build": "docker build -t whatsapp-auto-reply .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/config:/app/config -v $(pwd)/logs:/app/logs whatsapp-auto-reply",
    "docker:dev": "docker-compose up --build",
    "deploy": "node scripts/deploy.js",
    "deploy:prepare": "npm run build:clean && npm run setup:directories && node scripts/deploy-check.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "health:check": "node scripts/health-check.js",
    "backup:config": "node scripts/backup-config.js",
    "restore:config": "node scripts/restore-config.js",
    "render:setup": "node scripts/render-setup.js"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "auto-reply",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0",
    "ws": "^8.14.2",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
